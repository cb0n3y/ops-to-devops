# -*- mode: ruby -*-
# vi: set ft=ruby :

GRAF_SRV = "xxx.xxx.xxx.xxx"

BOX_CPUS = 2          # should be integer, not string
BOX_RAM = 4096        # should be integer, not string
PORTS = [3000, 9100]  # example ports Grafana and node_exporter use

VAGRANT_DISABLE_VBOXSYMLINKCREATE = "1"
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.box = "generic/centos9s"
  config.vm.box_check_update = true
  config.ssh.forward_agent = true

  config.vm.provision "shell", inline: <<-SHELL
    localectl set-keymap de-deadgraveacute
    # Configuring DNF
    echo "fastestmirror=True" >> /etc/dnf/dnf.conf
    echo "max_parallel_downloads=10" >> /etc/dnf/dnf.conf
    dnf makecache
    dnf -y update
  SHELL

  config.vm.define "grafana" do |grafana|
    grafana.vm.hostname = "grafana01"
    grafana.vm.network "public_network", ip: GRAF_SRV

    grafana.vm.provider "virtualbox" do |vb|
      vb.gui = false
      vb.name = "grafana01"
      vb.customize ["modifyvm", :id, "--groups", "/DevOps-Lab/Monitoring"]
      vb.memory = BOX_RAM
      vb.cpus = BOX_CPUS
    end

    grafana.vm.provision "shell", path: "../../shared-scripts/create_own_user.sh"

    # Pass ports as a space-separated string
    grafana.vm.provision "shell",
      path: "../../shared-scripts/set_fw_rules.sh",
      env: { "PORTS" => PORTS.join(" ") }
  end
end
